<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/image_item_tagjin"
            android:src="@mipmap/ic_label_today"
            />
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/image_item_tagyuan"
            android:src="@mipmap/ic_label_originate"
            />
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/image_item_tagjian"
            android:src="@mipmap/ic_label_recommend"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_blog_title"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="标题"
            android:maxEms="17"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容"
        android:textSize="20sp"
        android:maxLines="2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_blog_author"
            android:text="作者"
            android:textSize="16sp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_blog_time"
            android:text="时间"
            android:textSize="16sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></View>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_comment_30"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="0"
            android:id="@+id/tv_blog_comment_count"
            />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaa"
        android:layout_marginTop="25dp" />
</LinearLayout>