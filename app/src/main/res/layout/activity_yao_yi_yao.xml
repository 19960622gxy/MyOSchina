<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_yao_yi_yao"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuer.myoschina.activity.YaoYiYaoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/yaoyiyao_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        >
    </android.support.v7.widget.Toolbar>

    <!--中间-->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          />
      <ImageView
          android:id="@+id/yao_shake"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:src="@mipmap/ic_shake"
          android:layout_gravity="center"/>
      <TextView
          android:id="@+id/yao_text"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:text="摇一摇获取资讯"
          android:maxLines="2"
          android:textSize="20sp"
          android:textColor="#989898"
          android:gravity="center"
          android:layout_gravity="center"/>
      <!--在资讯页面会显示的-->
      <TextView
          android:id="@+id/tv_view_yaoyiyao"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:visibility="gone"/>
      <LinearLayout
          android:id="@+id/ll_yao_zixun"
          android:visibility="gone"
          android:orientation="horizontal"
          android:layout_gravity="center"
          android:layout_width="325dp"
          android:layout_height="80dp"
          android:background="@drawable/shape1">
          <LinearLayout
              android:layout_gravity="center"
              android:padding="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
          <ImageView
              android:layout_width="68dp"
              android:layout_height="95dp"
              android:src="@mipmap/ic_split_graph"
              android:layout_gravity="center"/>
          </LinearLayout>

          <!--<TextView-->
              <!--android:layout_width="5dp"-->
              <!--android:layout_height="match_parent"-->
              <!--/>-->

          <LinearLayout
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/yao_zixun_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textColor="#333"
                  android:maxLines="2"
                  android:maxEms="12"
                  android:gravity="left"
                  android:layout_marginTop="15dp"/>
              <TextView
                  android:id="@+id/yao_zixun_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  />
          </LinearLayout>
          <View
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>
          <ImageView
              android:layout_width="35dp"
              android:layout_height="30dp"
              android:src="@mipmap/faxian_right"
              android:layout_gravity="center_vertical"/>
          <View
              android:layout_width="10dp"
              android:layout_height="match_parent" />

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          />




            <!--底部-->
      <LinearLayout
          android:id="@+id/ll_lipin"
          android:background="#E8E8E8"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="100dp">
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="100dp"
              android:layout_weight="1">

                  <ImageButton
                      android:id="@+id/im_y_lipin"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@mipmap/btn_shake_gift"
                      android:layout_marginTop="10dp"
                      android:layout_gravity="center"
                      />
                  <TextView
                      android:id="@+id/tv_y_lipin"
                      android:layout_width="50dp"
                      android:layout_height="30dp"
                      android:text="礼品"
                      android:textColor="#D0D0D0"
                      android:textSize="20sp"
                      android:layout_gravity="bottom|center"
                      />

          </LinearLayout>
          <LinearLayout
              android:id="@+id/ll_zixun"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="100dp"
              android:layout_weight="1">
              <ImageButton
                  android:id="@+id/im_y_zixun"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:src="@mipmap/btn_shake_info"
                  android:layout_marginTop="10dp"
                  android:layout_gravity="center"
                  />
              <TextView
                  android:id="@+id/tv_y_zixun"
                  android:layout_width="50dp"
                  android:layout_height="30dp"
                  android:text="资讯"
                  android:textColor="#D0D0D0"
                  android:textSize="20sp"
                  android:layout_gravity="bottom|center"
                  />

          </LinearLayout>
      </LinearLayout>


</LinearLayout>
